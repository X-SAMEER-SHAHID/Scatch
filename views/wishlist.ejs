<%- include('./partials/header') %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">My Wishlist</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <% if (wishlist && wishlist.items && wishlist.items.length > 0) { %>
            <% wishlist.items.forEach(item => { %>
                <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
                    <div class="relative">
                        <img src="<%= item.product.image %>" alt="<%= item.product.name %>" class="w-full h-48 object-cover rounded-t-lg">
                        <button class="absolute top-2 right-2 p-2 rounded-full bg-white shadow-md hover:bg-gray-100 text-red-500">
                            <i class="ri-heart-fill"></i>
                        </button>
                    </div>
                    <div class="p-4">
                        <h3 class="text-lg font-semibold text-gray-800 mb-2"><%= item.product.name %></h3>
                        <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%= item.product.description %></p>
                        <div class="flex justify-between items-center">
                            <span class="text-lg font-bold text-primary">$<%= item.product.price %></span>
                            <button class="px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors">
                                Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-span-full">
                <div class="bg-white rounded-lg shadow-sm p-8 text-center">
                    <i class="ri-heart-line text-4xl text-gray-400 mb-4"></i>
                    <p class="text-gray-600 mb-4">Your wishlist is empty</p>
                    <a href="/shop" class="inline-block px-6 py-2 bg-primary text-white rounded-lg hover:bg-primary/90">
                        Browse Products
                    </a>
                </div>
            </div>
        <% } %>
    </div>
</div>

<%- include('./partials/footer') %> 