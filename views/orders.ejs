<%- include('./partials/header') %>
<div class="w-full min-h-screen bg-neutral flex flex-col items-center px-8 py-10">
  <div class="w-full max-w-4xl bg-surface rounded-xl shadow-lg p-8">
    <h2 class="text-2xl font-semibold text-secondary mb-6">Order History</h2>
    <% if (orders && orders.length > 0) { %>
      <table class="w-full mb-8">
        <thead>
          <tr class="text-left border-b border-neutral">
            <th class="py-2">Order #</th>
            <th class="py-2">Date</th>
            <th class="py-2">Status</th>
            <th class="py-2">Total</th>
            <th class="py-2"></th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(function(order) { %>
            <tr class="border-b border-neutral">
              <td class="py-3 font-semibold">ORD<%= order._id.toString().slice(-6).toUpperCase() %></td>
              <td class="py-3"><%= order.createdAt.toLocaleDateString() %></td>
              <td class="py-3"><%= order.status %></td>
              <td class="py-3">Rs <%= order.total %></td>
              <td class="py-3">
                <a href="/orders/<%= order._id %>" class="px-4 py-1 bg-primary text-white rounded hover:bg-indigo-700 transition-colors">View</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <div class="text-center text-gray-500">No orders found.</div>
    <% } %>
  </div>
</div> 