<%- include('./partials/header') %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col md:flex-row gap-8">
        <!-- Sidebar Navigation -->
        <div class="md:w-64">
            <div class="bg-white rounded-lg shadow-sm p-6">
                <div class="flex items-center space-x-4 mb-6">
                    <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center">
                        <i class="ri-user-line text-2xl text-primary"></i>
                    </div>
                    <div>
                        <h2 class="text-lg font-semibold text-gray-800"><%= user.fullname %></h2>
                        <p class="text-sm text-gray-600"><%= user.email %></p>
                    </div>
                </div>
                <nav class="space-y-2">
                    <a href="/profile" class="flex items-center px-4 py-2 text-gray-600 hover:bg-gray-50 rounded-lg">
                        <i class="ri-user-settings-line mr-3"></i>
                        Profile Settings
                    </a>
                    <a href="/orders" class="flex items-center px-4 py-2 text-primary bg-primary/5 rounded-lg">
                        <i class="ri-shopping-bag-line mr-3"></i>
                        My Orders
                    </a>
                    <a href="/addresses" class="flex items-center px-4 py-2 text-gray-600 hover:bg-gray-50 rounded-lg">
                        <i class="ri-map-pin-line mr-3"></i>
                        Addresses
                    </a>
                    <a href="/notifications" class="flex items-center px-4 py-2 text-gray-600 hover:bg-gray-50 rounded-lg">
                        <i class="ri-notification-line mr-3"></i>
                        Notifications
                    </a>
                </nav>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1">
            <div class="bg-white rounded-lg shadow-sm">
                <div class="p-6 border-b border-gray-100">
                    <h1 class="text-2xl font-semibold text-gray-800">My Orders</h1>
                </div>

                <% if (orders && orders.length > 0) { %>
                    <div class="divide-y divide-gray-100">
                        <% orders.forEach(order => { %>
                            <div class="p-6">
                                <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4">
                                    <div>
                                        <h3 class="text-lg font-semibold text-gray-800">Order #<%= order.orderNumber %></h3>
                                        <p class="text-sm text-gray-600">Placed on <%= new Date(order.createdAt).toLocaleDateString() %></p>
                                    </div>
                                    <div class="mt-2 md:mt-0">
                                        <span class="px-3 py-1 rounded-full text-sm font-medium
                                            <%= order.status === 'delivered' ? 'bg-success/10 text-success' : 
                                                order.status === 'processing' ? 'bg-warning/10 text-warning' : 
                                                order.status === 'cancelled' ? 'bg-error/10 text-error' : 
                                                'bg-primary/10 text-primary' %>">
                                            <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %>
                                        </span>
                                    </div>
                                </div>

                                <div class="space-y-4">
                                    <% order.items.forEach(item => { %>
                                        <div class="flex items-center">
                                            <img src="<%= item.product.image %>" alt="<%= item.product.name %>" 
                                                class="w-16 h-16 object-cover rounded-lg">
                                            <div class="ml-4 flex-1">
                                                <h4 class="text-sm font-medium text-gray-800"><%= item.product.name %></h4>
                                                <p class="text-sm text-gray-600">Quantity: <%= item.quantity %></p>
                                            </div>
                                            <div class="text-right">
                                                <p class="text-sm font-medium text-gray-800">$<%= item.price %></p>
                                                <p class="text-sm text-gray-600">Total: $<%= item.price * item.quantity %></p>
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>

                                <div class="mt-4 pt-4 border-t border-gray-100">
                                    <div class="flex justify-between items-center">
                                        <div>
                                            <p class="text-sm text-gray-600">Total Amount</p>
                                            <p class="text-lg font-semibold text-primary">$<%= order.total %></p>
                                        </div>
                                        <div class="space-x-2">
                                            <a href="/orders/<%= order._id %>" 
                                                class="px-4 py-2 text-sm text-primary hover:bg-primary/5 rounded-lg transition-colors">
                                                View Details
                                            </a>
                                            <% if (order.status === 'processing') { %>
                                                <button class="px-4 py-2 text-sm text-error hover:bg-error/5 rounded-lg transition-colors">
                                                    Cancel Order
                                                </button>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="p-8 text-center">
                        <i class="ri-shopping-bag-line text-4xl text-gray-400 mb-4"></i>
                        <p class="text-gray-600 mb-4">You haven't placed any orders yet</p>
                        <a href="/shop" class="inline-block px-6 py-2 bg-primary text-white rounded-lg hover:bg-primary/90">
                            Start Shopping
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %> 