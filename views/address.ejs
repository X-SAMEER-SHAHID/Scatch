<%- include('./partials/header') %>
<div class="w-full min-h-screen bg-neutral flex flex-col items-center px-8 py-10">
  <div class="w-full max-w-xl bg-surface rounded-xl shadow-lg p-8">
    <h2 class="text-2xl font-semibold text-secondary mb-6">Delivery & Billing Information</h2>
    <form action="/address" method="POST" class="space-y-6">
      <div>
        <label class="block text-gray-700 font-medium mb-2">Full Name</label>
        <input type="text" name="fullName" required class="w-full p-3 border rounded focus:outline-none focus:ring-2 focus:ring-primary" value="<%= user.fullName || '' %>" />
      </div>
      <div>
        <label class="block text-gray-700 font-medium mb-2">Phone Number</label>
        <input type="text" name="contact" required class="w-full p-3 border rounded focus:outline-none focus:ring-2 focus:ring-primary" value="<%= user.contact || '' %>" />
      </div>
      <div>
        <label class="block text-gray-700 font-medium mb-2">Shipping Address</label>
        <textarea name="shippingAddress" required class="w-full p-3 border rounded focus:outline-none focus:ring-2 focus:ring-primary" rows="2"><%= user.shippingAddress || '' %></textarea>
      </div>
      <div>
        <label class="block text-gray-700 font-medium mb-2">Billing Address</label>
        <textarea name="billingAddress" required class="w-full p-3 border rounded focus:outline-none focus:ring-2 focus:ring-primary" rows="2"><%= user.billingAddress || '' %></textarea>
      </div>
      <div class="flex justify-end">
        <button type="submit" class="px-8 py-3 bg-primary text-white rounded-lg text-lg font-semibold shadow hover:bg-indigo-700 transition-colors">Continue</button>
      </div>
    </form>
  </div>
</div> 